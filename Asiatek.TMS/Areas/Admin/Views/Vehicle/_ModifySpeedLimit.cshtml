@using Asiatek.Model
@using Asiatek.TMS.Helpers
@using Asiatek.Resource
@model VehicleModifySpeedLimitModel




@using (Ajax.BeginForm("ModifySpeedLimit", "Vehicle", new AjaxOptions()
{
    OnSuccess = "showCommonEditResult",
}, new { id = "frmModifySpeedLimit" }))
{
    @Html.AntiForgeryToken()
    
    <table class="table table-striped table-condensed table-hover">
        <tbody>
            <tr>
                <td>@Html.LabelFor(m => m.SpeedLimit)：</td>
                <td>@Html.EditorFor(m => m.SpeedLimit)</td>
            </tr>
            <tr>
                <td colspan="2">@Html.ValidationMessageFor(m => m.SpeedLimit)</td>
            </tr>
        </tbody>
        <tfoot>
            <tr>
                <td colspan="2">
                    @Html.HiddenFor(m => m.VehicleIDs)
                    <button class="btn btn-primary" title="@UIText.SaveButton"><span class="glyphicon glyphicon-ok"></span></button>
                </td>
            </tr>
        </tfoot>
    </table>
}




<script>

    var $frmfrmModifySpeedLimit = $("#frmModifySpeedLimit");
    $frmfrmModifySpeedLimit.find("input:not(:submit,:checkbox),textarea,select").addClass("form-control");
    $frmfrmModifySpeedLimit.fixUnobtrusiveValidation();
</script>
