*
{
    padding: 0px;
    margin: 0px;
}

a
{
    text-decoration: none;
}

ol, ul
{
    list-style: none;
}


div#container
{
    height: 63rem;
}



div#header
{
    background-color: skyblue;
    min-height: 5rem;
    min-width: 30rem;
}


div#menu, div#content, div#resizer
{
    height: 750px;
    position: absolute;
}

div#menu
{
    width: 15%;
}

div#resizer
{
    width: 0.5%;
    background: #666;
    left: 15%;
}

    div#resizer:hover
    {
        cursor: ew-resize;
    }

div#content
{
    right: 0;
    left: 15.5%;
    width: auto;
}


