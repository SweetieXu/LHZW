header, footer, nav, section
{
    display: block;
}


/* Styles for basic forms
-----------------------------------------------------------*/
fieldset
{
    border: 1px solid #ddd;
    padding: 0 1.4em 1.4em 1.4em;
    margin: 0 0 1.5em 0;
}

legend
{
    font-size: 1.2em;
    font-weight: bold;
}

textarea
{
    min-height: 75px;
}

.editor-label
{
    margin: 1em 0 0 0;
}

.editor-field
{
    margin: 0.5em 0 0 0;
}


/* Styles for validation helpers
-----------------------------------------------------------*/
.field-validation-error
{
    font-weight: bolder;
    color: #e43434;
}

.field-validation-valid
{
    display: none;
}

.input-validation-error
{
    border: 1px solid #e43434;
    background-color: #fee;
}

.validation-summary-errors
{
    font-weight: bolder;
    color: #e43434;
}

.validation-summary-valid
{
    display: none;
}




/* 全局通用样式*/
.nopadding
{
    padding: 0 !important;
    margin: 0 !important;
}

.negativeMargin
{
    margin-left: -15px !important;
    margin-right: -15px !important;
}

.negativeLeftMargin
{
    margin-left: -15px !important;
}

.negativeRightMargin
{
    margin-right: -15px !important;
}


.colorBlue
{
    font-weight: bold;
    color: blue;
}

.colorOrange
{
    color: orange;
    font-weight: bolder;
}

.fixTextArea
{
    outline: none;
    resize: none;
    width: 100%;
    height: 5rem;
}

.table th, .table td
{
    vertical-align: middle !important;
}


.requiredField
{
    color: red;
    font-weight: bolder;
    font-size: larger;
}
