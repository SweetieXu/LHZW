@using (Ajax.BeginForm("GetVehicleInfo", "Vehicle", new AjaxOptions()
    {
        UpdateTargetId = "Admin_Vehicle_VehicleSetting_divVehicles",
        OnSuccess = "commonAjaxSuccess",
        HttpMethod = "GET"
    }, new { id = "frmSearchVehicle" }))
{
