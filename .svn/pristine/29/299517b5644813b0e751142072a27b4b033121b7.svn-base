@using Asiatek.Model
@using Asiatek.TMS.Helpers
@using Asiatek.Resource
@model ServerManagerEditModel



@using (Ajax.BeginForm("AddServer", "ServerManager", new AjaxOptions()
{
    OnSuccess = "showCommonEditResult",
}, new { id = "frmAddServer" }))
{
    @Html.AntiForgeryToken()
    
    <table class="table table-striped table-condensed table-hover">
        <tbody>
            <tr>
                <td>@Html.LabelForRequired(m => m.ServerCode)：</td>
                <td>@Html.TextBoxFor(m => m.ServerCode)</td>
                <td>@Html.LabelForRequired(m => m.ServerName)：</td>
                <td>@Html.TextBoxFor(m => m.ServerName)</td>
            </tr>
            <tr>
                <td></td>
                <td>@Html.ValidationMessageFor(m => m.ServerCode)</td>
                <td></td>
                <td>@Html.ValidationMessageFor(m => m.ServerName)</td>
            </tr>
            <tr>
                <td>@Html.LabelForRequired(m => m.LinkedServerName)：</td>
                <td>@Html.EditorFor(m => m.LinkedServerName)</td>
                <td>@Html.LabelForRequired(m => m.IP)：</td>
                <td>@Html.EditorFor(m => m.IP)</td>
            </tr>
            <tr>
                <td></td>
                <td>@Html.ValidationMessageFor(m => m.LinkedServerName)</td>
                <td></td>
                <td>@Html.ValidationMessageFor(m => m.IP)</td>
            </tr>
            <tr>
                <td>@Html.LabelForRequired(m => m.WCFAddress)：</td>
                <td colspan="3">@Html.EditorFor(m => m.WCFAddress)</td>
            </tr>
            <tr>
                <td></td>
                <td colspan="3">@Html.ValidationMessageFor(m => m.WCFAddress)</td>
            </tr>
        </tbody>
        <tfoot>
            <tr>
                <td colspan="2">
                    <button class="btn btn-primary" title="@UIText.SaveButton"><span class="glyphicon glyphicon-ok"></span></button>
                </td>
            </tr>
        </tfoot>
    </table>
}


<script>
    var $frmAddTerminalManufacturer = $("#frmAddServer");
    $frmAddTerminalManufacturer.find("input:not(:submit,:checkbox),textarea,select").addClass("form-control");
    $frmAddTerminalManufacturer.fixUnobtrusiveValidation();
</script>


